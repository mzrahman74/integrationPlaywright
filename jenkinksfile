pipeline {
    agent any

    pipeline {
  agent any
  environment {
    api_key = credentials(process.env.api_key)
    base_url = process.env.base_url
  }
  stages {
    stage('Run API Tests') {
      steps {
        sh 'npx playwright test --grep @api'
      }
    }
  }
}
    parameters {
        choice(
            name: 'Script',
            choices: ['build', 'apiTest', "webTest", "mobileTest"],
            description: 'Which npm script to run'
        )
    }

   stage('Run Script') {
    steps {
        sh '''
          export NVM_DIR="$HOME/.nvm"
          [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
          nvm use 22
      
        '''
    }
}


    stages {
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Script') {
            steps {
                sh "npm run ${params.Script}"
            }
        }

        stage('Archive Results') {
            steps {
                archiveArtifacts artifacts: 'playwright-report/**', fingerprint: true
            }
        }
    }

    post {
        success {
            echo "Pipeline finished successfully!"
        }
        failure {
            echo "Pipeline failed. Check logs for details."
        }
    }
}
